[client]
port = 3306
socket = /tmp/mysql.sock
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4
no-auto-rehash

#The MySQL server
[mysqld]
# *** generic options ***
server-id = 161  #slave needs modify
port = 3306
socket = /tmp/mysql.sock
datadir = /data/mysql/
skip-name-resolve
secure_file_priv = ''

enforce_gtid_consistency = ON
gtid_mode = ON
expire-logs-days = 7
back_log = 500
max_connections = 2000
max_connect_errors = 100000
table_open_cache = 2048

# *** character relared option ***
character-set-client-handshake = FALSE
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'
lower_case_table_names = 1

# *** INNODB Specific options ***
default-storage-engine = innodb
transaction_isolation = REPEATABLE-READ
innodb_buffer_pool_size = 1G  #adjust value here,50%-70% of total RAM
innodb_data_file_path = ibdata1:256M:autoextend
innodb_file_per_table = 1
innodb_thread_concurrency = 8
innodb_flush_log_at_trx_commit = 1
sync_binlog = 1
innodb_io_capacity = 600        #adjust according to disk iops
innodb_io_capacity_max = 2000   #adjust according to disk iops
innodb_log_buffer_size = 8M
innodb_log_file_size = 512M
innodb_log_files_in_group = 4
innodb_max_dirty_pages_pct = 90
innodb_lock_wait_timeout = 120
innodb_flush_method = O_DIRECT_NO_FSYNC
table_open_cache_instances = 8
innodb_large_prefix = 1
innodb_file_format = barracuda
innodb_lru_scan_depth = 128

# *** MyISAM options ***
key_buffer_size = 128M
myisam_sort_buffer_size = 64M

# *** Other cache options ***
skip-external-locking
max_allowed_packet = 128M
binlog_cache_size = 1M
max_heap_table_size = 64M
sort_buffer_size = 8M
join_buffer_size = 8M
thread_stack = 192K
tmp_table_size = 128M

# *** about setting of logs ***
binlog_format = row
log_output = table,file
log-bin = /data/logs/mysql/mysql-bin
log_bin_trust_function_creators = 1

# *** slowlog options ***
slow_query_log = 1
slow_query_log_file = /data/mysql/slow.log
long_query_time = 1
log-queries-not-using-indexes = 0

# *** for slave server ***
#log_slave_updates = 1
#skip_slave_start = 1
#read_only = 1    #slave needs modify
#slave_parallel_workers = 4
#slave_parallel_type = LOFICAL_CLOCK

# *** Replication related settings ***
relay_log_info_repository = TABLE
master_info_repository = TABLE
relay_log_recovery = on
relay_log = /data/mysql/relay-bin

# *** set sqll_mode,and skip innodb strict check ***
sql_mode = 'NO_ENGINE_SUBSTITUTION'
innodb_strict_mode = off

log-error = /data/mysql/error.log

[mysqldump]
quick
max_allowed_packer = 128M

[myisamchk]
key_buffer_size = 128M
sort_vuffer_size = 64M
read_buffer = 8M
write_buffer = 8M

[mysqlhotcopy]
interactive-timout

[mysqld_safe]
open-files-limit = 65535